<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' +  name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="col-12">
			<form action="/products/edit/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" class="form-input" value="<%= name %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" class="form-input" value="<%= price %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" class="form-input" value="<%= discount %>">
					</div>
					<div class="col-12 col-md-6">
						<label for="categoryId" class="form-label">Categoría:</label>
						<select name="categoryId" id="categoryId" class="form-input">
							<option value="">Elegí</option>
							<% categories.forEach(category => { %>
							 
								<option value="<%= category.id %>" <%= category.id === categoryId && 'select' %>><%= category.name %></option>
							<% }) %>
							
						</select>
					</div>
					<div class="mb-3 d-flex" style="align-items: flex-end">
						<div class="col-12 col-md-6">
							
						</div>
						
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= description %></textarea>
					</div>
					
					<div class="col-12 d-flex justify-content-end">
						<label for="image" class="buy-now-button mx-2" style="cursor: pointer;">Agregar imagen</label>
						<input type="file" name="image" id="image" hidden>
						<button type="submit" class="buy-now-button mx-2">Actualizar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>